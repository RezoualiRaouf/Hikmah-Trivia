<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Core color roles -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surfaces -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Background for windows -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Material button default style -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <!-- Reusable button styles -->
    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <style name="OutlinedGreenButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>
</resources>
