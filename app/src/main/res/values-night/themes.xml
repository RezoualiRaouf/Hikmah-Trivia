<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night mode -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Core color roles -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surfaces -->
        <item name="colorSurface">@color/surface_night</item>
        <item name="colorOnSurface">@color/on_surface_night</item>

        <!-- Background for windows -->
        <item name="android:windowBackground">@color/background_night</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_color</item>

        <!-- Material button default style -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>
</resources>
