<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item> <!-- #2E7D32 -->
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Override card backgrounds in night mode -->
        <item name="cardViewStyle">@style/QuizCardStyle</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/primary_dark</item>
        <item name="materialCardViewStyle">@style/QuizCardStyle</item>
    </style>

    <style name="QuizCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>
